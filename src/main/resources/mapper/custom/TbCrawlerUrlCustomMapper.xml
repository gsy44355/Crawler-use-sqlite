            <if test="type!=null and type!=''">
                ,
            </if>
            <if test="type ==null or type==''">
                <if test="busy!=null and busy!=''">
                    ,
                </if>
            </if>
            info = #{info}
        </if>

        where url=#{url}

    </update>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
    DELETE FROM tb_crawler_url
WHERE url = #{url};

    </delete>
