        </if>
        <if test="busy!=null and busy!=''">
            ,#{busy}
        </if>
        <if test="info!=null and info!=''">
            ,#{info}
        </if>
        )
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.gsy.crawler.pojo.TbCrawlerUrl">
        update  tb_crawler_url set
        <if test="type!=null and type!=''">
            type = #{type}
        </if>
        <if test="busy!=null and busy!=''">
            <if test="type!=null and type!=''">
                ,
            </if>
            busy = #{busy}
        </if>
